<!DOCTYPE html>
<html lang="en">
    <% include partials/head %>
<body>
<% include partials/header %>
<div class="container center-align">
        <div class="row">
                <div class="col s12 m12">
                  <div class="card purple accent-2">
                    <div class="card-content white-text">
                      <span class="card-title">Registros</span>


                        
                          <form action="/buscar" method="POST">
                            <div class="row">
                              <div class="input-field col s6">
                                <input  type="text"  placeholder="Introduce Nombre o parte"  name="name" class="validate">
                                
                                <button  type="submit">Buscar Por Nombre</button>
                            </div>
                          </div>
                          </form> 
                     
                      <table border="1">
                            <thead>
                                <tr>
                                    <td>Nome</td>
                                    <td>Sobrenome</td>
                                    <td>Accion</td>
                                </tr>
                            </thead>
                            <tbody>
                            <% data.forEach(function(details) { %>
                                <tr>
                                    <td><%= details.name %></td>
                                    <td><%= details.surname %></td>
                                    <td><a class="waves-effect waves-light btn" href="/edit/<%= details._id %>">Editar</a> - <a class="waves-effect waves-light btn" href="/delete/<%= details._id %>">Eliminar</a></td>
                                </tr>
                                <% }) %>
                            </tbody>
                          </table>
                          <a  class="waves-effect waves-light btn pink darken-4" href="/datos" class="button">Nuevo</a>
                        
                    </div>
                    <div class="card-action">
                      <a href="#">This is a link</a>
                      <a href="#">This is a link</a>
                    </div>
                  </div>
                </div>
              </div>
   
  


</div>
   
  
</body>
</html>